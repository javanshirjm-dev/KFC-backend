{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string"
    },
    "customerEmail": {
      "type": "email"
    },
    "customerPhone": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "items": {
      "type": "json"
    },
    "total": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "shipped",
        "delivered",
        "cancelled"
      ],
      "default": "pending"
    }
  }
}